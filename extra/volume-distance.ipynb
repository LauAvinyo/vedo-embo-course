{
 "cells": [
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [],
   "source": [
    "from vedo import *\n",
    "\n",
    "settings.default_backend = "vtk"  # or k3d, ipyvtk, or 2d"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Read the mesh\n",
    "msh = Mesh(dataurl + \"panther.stl\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualize the mesh\n",
    "\n",
    "plt = Plotter()\n",
    "\n",
    "msh = Mesh(dataurl + \"panther.stl\")\n",
    "plt += msh.linewidth(1)\n",
    "\n",
    "plt.show()\n",
    "plt.close()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "\n",
    "# Get a volume out of the mesh. \n",
    "# Each voxel has as a scalar the distance between the voxel and the mesh\n",
    "\n",
    "plt = Plotter()\n",
    "msh = Mesh(dataurl + \"panther.stl\")\n",
    "msh.smooth().compute_normals() \n",
    "vol = msh.signed_distance(dims=(50, 50, 50)).pad(8)\n",
    "\n",
    "# Lego visualitzation\n",
    "plt += vol.cmap(\"viridis\")\n",
    "plt.show()\n",
    "plt.close()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
   "outputs": [],
   "source": [
    "# The volume is not easy to visualize, \n",
    "# so let's get planes to see what is actually there.\n",
    "\n",
    "\n",
    "# Y - slices\n",
    "plt = Plotter()\n",
    "plt += vol.xslice(25)\n",
    "plt.show()\n",
    "plt.close()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 6,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Z slices\n",
    "plt = Plotter()\n",
    "plt += vol.zslice(32)\n",
    "plt.show()\n",
    "plt.close()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 7,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Finally we can also get the surfaces generated by the boxels of same value\n",
    "\n",
    "# To recover the initial mesh\n",
    "iso = vol.isosurface(0)\n",
    "\n",
    "plt = Plotter()\n",
    "\n",
    "plt += iso\n",
    "plt.show()\n",
    "plt.close()\n",
    "\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "metadata": {},
   "outputs": [],
   "source": [
    "# We can get internal and external surfaces as well!\n",
    "iso = vol.isosurface(-1)\n",
    "\n",
    "plt = Plotter()\n",
    "plt += iso\n",
    "plt.show()\n",
    "plt.close()\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 9,
   "metadata": {},
   "outputs": [],
   "source": [
    "# External\n",
    "iso = vol.isosurface(1)\n",
    "\n",
    "plt = Plotter()\n",
    "plt += iso\n",
    "plt.show()\n",
    "plt.close()\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 10,
   "metadata": {},
   "outputs": [],
   "source": [
    "from vedo.applications import IsosurfaceBrowser"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 11,
   "metadata": {},
   "outputs": [],
   "source": [
    "plt = IsosurfaceBrowser(vol, use_gpu=True, c='viridis')\n",
    "plt.show()\n",
    "plt.close()"
   ]
  }
 ],
